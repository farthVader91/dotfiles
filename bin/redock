#! /usr/bin/env bash
# Disable all monitors
xrandr --output VIRTUAL1 --off
xrandr --output DP1 --off
xrandr --output HDMI1 --off
xrandr --output DP1-1 --off
xrandr --output DP1-2 --off
xrandr --output DP1-3 --off
# Enable monitors
xrandr --output eDP1 --primary
xrandr --output DP1-3 --auto --left-of eDP1
xrandr --output DP1-2 --auto --rotate left --left-of DP1-3
# Move workspaces
i3-msg 'workspace 2: web; move workspace to output DP1-2'
i3-msg 'workspace 3: emacs; move workspace to output DP1-3'
i3-msg 'workspace 7: idea; move workspace to output DP1-3'
